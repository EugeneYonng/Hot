<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#110d0718">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal"
       android:background="#0080FF">
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/ic_chevron_left_white_18dp"
           android:id="@+id/iv_method_left"
           android:layout_gravity="center"/>
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:src="@drawable/testimage"
           android:id="@+id/iv_method_icon_left"/>
        <com.hotdoor.textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="解决方案"
            android:id="@+id/tv_method_title"
            android:textColor="#ffffff"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:id="@+id/iv_method_collect_button"
               android:src="@drawable/ic_favorite_border_white_24dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"
               android:visibility="invisible"/>
       </RelativeLayout>
   </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_method">
    </FrameLayout>
</LinearLayout>