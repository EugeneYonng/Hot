<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/second_step" />

    <com.hotdoor.textview.MyTextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#0080FF"
        android:text="个人信息"
        android:textSize="19sp"
        android:textColor="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16sp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="账号"
            android:textSize="16sp"/>
        
        <EditText
            android:id="@+id/et_personal_register_account"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="  请输入您的手机号或邮箱"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="密码"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_personal_register_password"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="           请输入您的密码"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="密码确认"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_personal_register_password_certify"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="           请再次输入密码"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="昵称"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_personal_register_username"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="               请输入昵称"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="常用邮箱"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_personal_register_email"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="           请输入常用邮箱"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp" >
        <ImageView
            android:id="@+id/iv_personal_register_portrait_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:src="@drawable/testimage" />

        <com.hotdoor.textview.MyTextView
            android:id="@+id/btn_personal_register_upload_portrait_icon"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_corners_10dp"
            android:text="上传头像"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <com.hotdoor.textview.MyTextView
        android:id="@+id/btn_personal_register_info_next_step"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/selector_corners_10dp"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

</LinearLayout>
