<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/third_step" />
    
    <com.hotdoor.textview.MyTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="注册成功！您的个人信息如下"
        android:textSize="16sp"
        android:textColor="#af32bb23"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="头像："
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/iv_personal_register_portrait_icon_certify"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:src="@drawable/testimage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="昵称："
            android:textSize="16sp" />

        <com.hotdoor.textview.MyTextView
            android:id="@+id/tv_personal_register_username_certify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:text="XXX"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="密码："
            android:textSize="16sp" />

        <com.hotdoor.textview.MyTextView
            android:id="@+id/tv_personal_register_password_certify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:text="XXXXXX"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="邮箱："
            android:textSize="16sp" />

        <com.hotdoor.textview.MyTextView
            android:id="@+id/tv_personal_register_email_certify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:text="XXXXXX"
            android:textSize="16sp"/>
    </LinearLayout>

    <com.hotdoor.textview.MyTextView
        android:id="@+id/btn_personal_register_complete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/selector_corners_10dp"
        android:text="完 成"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

</LinearLayout>
