<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="项目名称:"
        android:textSize="22sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_name_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_personal_sell_submited_project_name"
        android:text="项目具体名称"
        android:textSize="20sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_personal_sell_submited_project_price"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_name"
        android:text="报备总价:"
        android:textSize="16sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_price_content"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_personal_sell_submited_project_name"
        android:layout_toRightOf="@id/tv_personal_sell_submited_project_price"
        android:text="1000.0元"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_personal_sell_submited_project_price_real_content"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_name"
        android:text="1000.0元"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_price_real"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_personal_sell_submited_project_price_real_content"
        android:layout_below="@id/tv_personal_sell_submited_project_name"
        android:text="实际总价:"
        android:textSize="16sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_personal_sell_submited_project_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_price"
        android:text="预计实施时间:"
        android:textSize="16sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_time_content"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_personal_sell_submited_project_price_content"
        android:layout_toRightOf="@id/tv_personal_sell_submited_project_time"
        android:text="2015/08/15"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_personal_sell_submited_project_time_real"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_time"
        android:text="实际实施时间:"
        android:textSize="16sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_time_real_content"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_personal_sell_submited_project_time_content"
        android:layout_toRightOf="@id/tv_personal_sell_submited_project_time_real"
        android:text="2015/09/15"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />
    
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_submit_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_time_real"
        android:text="提交时间:"
        android:textSize="16sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_submit_time_content"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_personal_sell_submited_project_time_real_content"
        android:layout_toRightOf="@id/tv_personal_sell_submited_project_submit_time"
        android:text="2015/07/20"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_personal_sell_submited_project_process_content"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_time_real_content"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="#0080FF"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_process"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_personal_sell_submited_project_process_content"
        android:layout_below="@id/tv_personal_sell_submited_project_time_real_content"
        android:text="完成进度:"
        android:textSize="16sp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_personal_sell_submited_project_message"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_personal_sell_submited_project_submit_time"
        android:text="备注:"
        android:textSize="16sp"
        android:gravity="center" />

    <ScrollView
        android:layout_width="302dp"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_personal_sell_submited_project_message"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_sell_submit_message" >
        <TextView
            android:id="@+id/tv_personal_sell_submited_project_message_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="@string/GXY_EDU12_funtion"
            android:textSize="16sp"
            android:textColor="#0080FF" />
    </ScrollView>

</RelativeLayout>
