<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#110d0718">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#0080FF">
        <ImageView
            android:id="@+id/iv_product_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_chevron_left_white_18dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/iv_product_left_icon"
            android:src="@drawable/testimage" />
        <com.hotdoor.textview.MyTextView
            android:id="@+id/mtv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="产品中心"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff">
        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="android.support.v4.view.ViewPager"
            android:id="@+id/vp_product_pager"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <me.relex.circleindicator.CircleIndicator
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/ci_product_indicator"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">
        </me.relex.circleindicator.CircleIndicator>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:id="@+id/ll_product1"
            android:weightSum="4">
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_cloud_speed"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/rl_cloud_speed">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_speed"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云提速"
                        android:layout_below="@id/iv_speed"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_cloud_safe"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/rl_cloud_safe">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_safe"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云安全"
                        android:layout_below="@id/iv_safe"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_cloud_save"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/cloud_save">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_save"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云存储"
                        android:layout_below="@id/iv_save"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_cloud_manager"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/cloud_manager">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_manage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云管理"
                        android:layout_below="@id/iv_manage"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_product1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:weightSum="4"
            >
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_smart_cloud_server"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/rl_smart_cloud_manager">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_smart_cloud"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_smart_cloud"
                        android:text="睿云管理器"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </com.andexert.library.RippleView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                />
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_cloud_computer"
                android:background="?android:attr/listDivider"
                android:layout_margin="1dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/rl_cloud_computer">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/testimage"
                        android:scaleType="fitCenter"
                        android:id="@+id/iv_cloud_computer"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="云电脑"
                        android:layout_below="@id/iv_cloud_computer"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>