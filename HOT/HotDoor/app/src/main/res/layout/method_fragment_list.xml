<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#110d0718">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_smart_campus"
            android:layout_margin="1dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_smart_campus"
                android:src="@drawable/testimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智慧校园"
                android:layout_below="@id/iv_smart_campus"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_smart_company"
            android:layout_margin="1dp"
            android:background="#ffffff">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/testimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/iv_smart_company"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智慧企业"
                android:textSize="22sp"
                android:layout_below="@id/iv_smart_company"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tv_center"/>
        <com.hotdoor.regularHexagon.RegularHexagonView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/testimage"
            android:layout_centerInParent="true"
            android:id="@+id/rhv_security_informatization"
            android:scaleType="fitCenter"/>
        <com.hotdoor.regularHexagon.RegularHexagonView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/testimage"
            android:layout_above="@id/rhv_security_informatization"
            android:layout_centerHorizontal="true"
            android:id="@+id/rhv_rural_informatization"
            android:layout_marginBottom="2dp"
            android:scaleType="fitCenter"/>
        <com.hotdoor.regularHexagon.RegularHexagonView
            android:layout_marginTop="2dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@id/rhv_security_informatization"
            android:layout_centerHorizontal="true"
            android:src="@drawable/testimage"
            android:id="@+id/rhv_financial_informatization"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_center"
            android:layout_marginRight="27dp"
            >
            <com.hotdoor.regularHexagon.RegularHexagonView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/rhv_move_working"
                android:layout_marginBottom="1dp"
                android:src="@drawable/testimage"
                android:scaleType="fitCenter"/>

            <com.hotdoor.regularHexagon.RegularHexagonView
                android:layout_marginTop="1dp"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/rhv_hotel_informatization"
                android:src="@drawable/testimage"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_center"
            android:layout_marginLeft="27dp">
            <com.hotdoor.regularHexagon.RegularHexagonView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/rhv_library_cloud"
                android:layout_marginBottom="1dp"
                android:src="@drawable/testimage"
                android:scaleType="fitCenter"/>
            <com.hotdoor.regularHexagon.RegularHexagonView
                android:layout_marginTop="1dp"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/rhv_industry_informatization"
                android:src="@drawable/testimage"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
