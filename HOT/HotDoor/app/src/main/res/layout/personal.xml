<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#0080FF">
        <ImageView
            android:id="@+id/iv_personal_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_chevron_left_white_18dp" />
        <ImageView
            android:id="@+id/iv_personal_icon_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/testimage" />
        <com.hotdoor.textview.MyTextView
            android:id="@+id/tv_personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="个人中心"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.hotdoor.textview.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="34dp"
        android:layout_gravity="center_horizontal"
        android:text="欢迎登陆国芯云"
        android:textSize="30dp"
        android:textColor="#0080FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:src="@drawable/testimage" />
        <EditText
            android:id="@+id/et_personal_account"
            android:layout_width="224dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:hint="请输入账号"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:src="@drawable/testimage" />
        <EditText
            android:id="@+id/et_personal_password"
            android:layout_width="224dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:hint="请输入密码"
            android:background="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" >
        <com.gc.materialdesign.views.CheckBox
            android:id="@+id/cb_personal_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="#1E88E5"
            materialdesign:check="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="记住密码"
            android:textSize="18dp" />

        <com.gc.materialdesign.views.CheckBox
            android:id="@+id/cb_personal_login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="#1E88E5"
            materialdesign:check="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="自动登录"
            android:textSize="18dp" />
    </LinearLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_personal_login"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="#1E88E5" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="登 陆"
            android:textSize="23dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center" />
    </com.gc.materialdesign.views.ButtonRectangle>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_personal_register"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#1E88E5" >
        <com.hotdoor.textview.MyTextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="一键注册"
            android:textSize="23dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center" />
    </com.gc.materialdesign.views.ButtonRectangle>

</LinearLayout>